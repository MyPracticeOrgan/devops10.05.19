kind: PersistentVolume
apiVersion: v1
metadata:
  name: {{ clientname }}-wordpress-maria-pv-volume
  labels:
    type: local
    app: wordpress-maria
spec:
  storageClassName: manual
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Recycle
  hostPath:
    path: "/{{ clientname }}-wordpress/data"

---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: {{ clientname }}-wordpress-maria-pv-claim
  labels:
    app: wordpress-maria
spec:
  storageClassName: manual
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 2Gi
